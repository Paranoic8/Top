<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/main.padding.small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/contentMain"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_artist"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_account_box_black_24dp"
            android:layout_width="@dimen/imagen.item.size"
            android:layout_height="@dimen/imagen.item.size"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nombre"
        android:hint="@string/artista.hint.nombre"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerVertical="true"
            android:maxLines="2"
            android:layout_margin="@dimen/main.padding.small"
        android:layout_toEndOf="@id/img_artist"
            android:layout_toStartOf="@+id/tv_orden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_orden"
            android:gravity="center"
            android:layout_margin="@dimen/main.padding.small"
            android:hint="@string/artista.hint.rango"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_centerVertical="true"
            android:drawableBottom="@drawable/ic_star"
            android:drawableTint="@color/amarillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>